<!-- views/my-account.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">My Account</h1>
        
        <!-- User Information -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <div class="flex items-center mb-4">
                <img src="<%= user.picture %>" alt="Profile Picture" class="w-24 h-24 rounded-full mr-4">
                <div>
                    <h2 class="text-xl font-semibold"><%= user.fullName %></h2>
                    <p class="text-gray-600"><%= user.email %></p>
                    <p class="text-gray-600">Contact: <%= user.contact %></p>
                </div>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-xl font-semibold mb-4">My Cart</h2>
            <% if (user.cart.length > 0) { %>
                <ul>
                    <% user.cart.forEach(item => { %>
                        <li class="flex justify-between border-b py-2">
                            <div>
                                <p class="font-semibold"><%= item.product.name %></p>
                                <p>Quantity: <%= item.quantity %></p>
                            </div>
                            <p class="text-gray-600">$<%= item.total.toFixed(2) %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
        </div>

        <!-- Orders Section -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">My Orders</h2>
            <% if (user.orders.length > 0) { %>
                <ul>
                    <% user.orders.forEach(order => { %>
                        <li class="border-b py-2">
                            <p class="font-semibold">Order ID: <%= order._id %></p>
                            <p>Date: <%= new Date(order.date).toLocaleDateString() %></p>
                            <p>Total: $<%= order.total.toFixed(2) %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>You have no orders yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
