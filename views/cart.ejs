<%- include('./partials/header') %>

<div class="w-full h-full px-10 py-20 bg-gray-100">
    <% user.cart.forEach((product) => { %>
        <div class="flex flex-col md:flex-row items-start bg-white shadow-lg rounded-lg mb-8 overflow-hidden">
            <!-- Product Image and Details -->
            <div class="w-full md:w-1/3">
                <div class="relative w-full h-80 bg-[<%= product.bgcolor %>]">
                    <img class="w-full h-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                <div class="flex justify-between items-center bg-[<%= product.panelcolor %>] p-4">
                    <h3 class="text-2xl font-semibold"><%= product.name %></h3>
                    <div class="flex items-center gap-2">
                        <a href="/products/decCart/<%= product._id %>" class="w-7 h-7 flex items-center justify-center bg-white rounded-full text-gray-600 hover:bg-gray-200">
                            <i class="ri-subtract-line"></i>
                        </a>
                        <div class="px-3 py-1 bg-gray-100 rounded-md text-gray-700">
                            <%= product.quantity %>
                        </div>
                        <a href="/products/incCart/<%= product._id %>" class="w-7 h-7 flex items-center justify-center bg-white rounded-full text-gray-600 hover:bg-gray-200">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
                <div class="flex justify-between items-center bg-[<%= product.panelcolor %>] p-4">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg font-bold">₹<%= product.price * product.quantity %></h2>
                </div>
            </div>

            <!-- Price Breakdown and Actions -->
            <div class="w-full md:w-2/3 p-6">
                <h3 class="text-xl font-bold mb-4">Price Breakdown</h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <h4>Total MRP</h4>
                        <h4>₹ <%= product.price %></h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Discount on MRP</h4>
                        <h4>₹ <%= product.discount %></h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                    <div class="flex justify-between">
                        <h4>Quantity</h4>
                        <h4><%= product.quantity %></h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-gray-300 my-5"></div>
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-bold">Total Amount</h3>
                    <h3 class="text-xl font-semibold text-green-600">₹<%= product.total %></h3>
                </div>
                <!-- Remove from Cart Button -->
                <div class="mt-6">
                    <a href="/products/removeCart/<%= product._id %>" class="inline-block px-6 py-2 text-white bg-red-500 rounded-md hover:bg-red-600">
                        Remove from Cart
                    </a>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<%- include('./partials/footer') %>
<script src="/javascripts/productQunatityHandle.js"></script>
